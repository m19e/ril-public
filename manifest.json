{
    "manifest_version": 2,

    "name": "Read-It-Later",
    "description": "This extension posts an url which you are watching to a discord channel.",
    "version": "0.1",

    "icons": {
        "128": "favicon.png"
    },

    "permissions": ["tabs"],

    "browser_action": {
        "default_icon": "favicon.png",
        "default_popup": "index.html"
    },

    "options_page": "options.html",

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "MacCtrl+Shift+L"
            },
            "description": "Trigger post message to discord."
        }
    }
}
